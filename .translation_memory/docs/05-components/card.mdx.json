    {
      "segment_id": "d912d376",
      "source_content": "## Usage",
      "source_content_hash": "63bfd61a0561b255a2caa0a2e3add091ca7e327f2fa06a407cbb2ff341b858d8",
      "node_type": "heading",
      "translatable": true,
      "translations": {
        "ja": "## 使用方法"
      }
    },
    {
      "segment_id": "88aa2da8",
      "source_content": "<iframe\n  src=\"https://developers.grafana.com/ui/latest/index.html?path=/story/general-card--full&full=1&shortcuts=false&singleStory=true\"\n  width=\"100%\"\n  height=\"500px\"\n></iframe>",
      "source_content_hash": "8a581cecb0c12d68bcbf9f420a6fd21b2e6ae3d6f392c993dc92df0458497eff",
      "node_type": "mdxJsxFlowElement",
